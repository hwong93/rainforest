<h1>Products#index</h1>
<p>Find me in app/views/products/index.html.erb</p>

<%= link_to "New Product", new_product_path %>

<% @products.each do |product| %>
  <p>
    <%=link_to product.name, product_path(product) %>, $<%= product.formatted_price%>
  </p>
  <p>
    <%= product.description %>
  </p>
<% end %>
